@model Miles.Sample.Web.Models.Fixtures.IndexModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Fixture
        </th>
        <th>
            ScheduledDateTime
        </th>
        <th>
            Active
        </th>
        <th>
            Completed
        </th>
    </tr>

@foreach (var item in Model.Fixtures) {
    <tr>
        <td>
            @item.TeamA
            @if (item.TeamAPoints.HasValue) { string.Format("({0})", item.TeamAPoints); }
            vs
            @item.TeamB
            @if (item.TeamBPoints.HasValue) { string.Format("({0})", item.TeamBPoints); }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
    </tr>
}

</table>

@using (Html.BeginForm("Schedule", "Fixtures", new { leagueId = Model.LeagueId }))
{
    <div class="form-group">
        @Html.DropDownListFor(x => x.TeamA, Model.Teams.Select(x => new SelectListItem { Text = x, Value = x }), new { @class = "form-control" })
        vs
        @Html.DropDownListFor(x => x.TeamB, Model.Teams.Select(x => new SelectListItem { Text = x, Value = x }), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="control-label">Schedule</label>
        <input type="datetime-local" class="form-control" name="ScheduledDateTime" />
    </div>
    <button type="submit">Schedule</button>
}
